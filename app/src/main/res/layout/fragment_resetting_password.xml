<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true"
    tools:context=".Fragments.ResettingPasswordFragment">


    <android.support.constraint.ConstraintLayout style="@style/AuthHolder">

        <ImageView
            android:id="@+id/iv_icon"
            style="@style/AuthIcons"
            android:contentDescription="@string/login_icon"
            android:src="@mipmap/ic_shield"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <TextView
            android:id="@+id/tv_resetting_pass"
            style="@style/AuthDetails"
            android:text="@string/resetting_password"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_icon" />

        <TextView
            android:id="@+id/tv_more_info"
            style="@style/AuthMoreDetails"
            android:text="@string/we_ve_sent_you_a_code_to_your_e_mail_abc_soleek_com"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_resetting_pass" />


        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_new_password_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:gravity="center_vertical"
            android:padding="3dp"
            android:textColorHint="@color/colorGray"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_more_info"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorGray"
                android:hint="@string/new_password"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/colorTextDark"
                android:textSize="18sp" />
        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_retype_new_password_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="46dp"
            android:gravity="center_vertical"
            android:padding="3dp"
            android:textColorHint="@color/colorGray"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_new_password_layout"
            app:passwordToggleEnabled="true">

            <EditText
                android:id="@+id/retype_new_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/re_type_new_password"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/colorTextDark"
                android:textSize="18sp" />
        </android.support.design.widget.TextInputLayout>


        <Button
            android:id="@+id/reset"
            style="@style/AuthBtn"
            android:background="@drawable/button_gray"
            android:text="@string/reset"
            android:textColor="@color/colorWhite"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_retype_new_password_layout" />
    </android.support.constraint.ConstraintLayout>

    <ImageView
        android:id="@+id/ib_back"
        style="@style/AuthBackButton"
        android:contentDescription="@string/arrow_back" />
</FrameLayout>